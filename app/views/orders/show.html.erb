<section class="orders-show">
  <header class="page-header">
    <h1>Order #
      <%= @order.id %>
    </h1>
  </header>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <%= render @order %>
    </tbody>
  </table>

  <div class="order-summary jumbotron">
    <h4>Thank you <%= @order.email %> for your order! Your total is <%= '%.2f' % (@order.line_items.sum('total_price_cents') / 100.00) %></h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>